/* components/popup/popup.wxss */
.wx-popup {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.popup-container{
  width: 600rpx;
  height: 500rpx;
  background: #fff;
  box-shadow: 0 0 8rpx 8rpx rgba(68, 181, 73,0.5);
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.popup-title{
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid rgba(68, 181, 73,0.5);
  box-sizing: border-box;
  text-align: center;
  line-height: 90rpx;
}
.popup-content{
  width: 100%;
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.popup-button{
  height: 120rpx;
  width: 100%;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}
.popup-cancel{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-right: 1rpx solid #ccc;
}
.popup-confirm{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  color: green;
}