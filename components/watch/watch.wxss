/* components/watch/watch.wxss */
.watch-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.watch-time{
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 15rpx;
  text-align: center;
}
.watch-button{
  display: flex;
  width: 400rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 50rpx;
}
.button-block{
  padding: 5rpx 25rpx;
  background: rgba(235, 75, 223,0.5);
  border-radius: 10rpx;
  color: #fff;
}