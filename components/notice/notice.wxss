.notice-container {
  width: 750rpx;
  height: 50rpx;
  background: rgba(18, 150, 219,0.5);
  font-size: 30rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
}

.notice-line {
  color: #fff;
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.notice-content {
  white-space: nowrap;
  position: absolute;
  top: 5rpx;
}

.notice-icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 15rpx;
  top: 114rpx;
  float: right;
}

.icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  background-size: contain;
}
