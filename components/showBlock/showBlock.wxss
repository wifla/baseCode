
.show-container{
  width: 750rpx;
  min-height: 360rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
  padding: 30rpx 0 30rpx 0;
  
}
.show{
  width: 650rpx;
  min-height: 300rpx;
  
  border-radius: 20rpx;
  
  
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  text-align: justify;
  justify-content: center;
  
}
.show-title{
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 15rpx;
  text-align: center;
}
.show-content{
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.show-info{
  display: flex;
  flex-direction: column;
  text-align: right;
  margin: 0 50rpx 15rpx 0;
}